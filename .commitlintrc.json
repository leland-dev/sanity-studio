{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "improvement"
      ]
    ]
  },
  "prompt": {
    "questions": {
      "type": {
        "enum": {
          "improvement": {
            "description": "An improvement to an existing feature",
            "title": "Improvement"
          }
        }
      }
    }
  }
}
